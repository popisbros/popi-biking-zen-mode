rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to community_warnings collection
    match /community_warnings/{document} {
      allow read, write: if true; // Open for development - restrict in production
    }

    // Allow read/write access to cycling_pois collection
    match /cycling_pois/{document} {
      allow read, write: if true; // Open for development - restrict in production
    }

    // Allow read/write access to users collection (requires auth)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow write access to logs collection (API & debug logs)
    // Auto-delete logs older than 7 days via Cloud Function or manual cleanup
    match /logs/{logId} {
      // Anyone can write logs (authenticated or anonymous)
      allow create: if true;

      // Only users can read their own logs
      allow read: if request.auth != null &&
                     request.auth.uid == resource.data.userId;

      // No updates or deletes from clients (only via Cloud Function)
      allow update, delete: if false;
    }
  }
}

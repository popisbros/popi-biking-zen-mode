rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to community_warnings collection
    match /community_warnings/{document} {
      allow read, write: if true; // Open for development - restrict in production
    }

    // Allow read/write access to cycling_pois collection
    match /cycling_pois/{document} {
      allow read, write: if true; // Open for development - restrict in production
    }

    // Allow read/write access to users collection (requires auth)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

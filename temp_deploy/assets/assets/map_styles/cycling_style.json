{
  "version": 8,
  "name": "Cycling Style",
  "metadata": {
    "mapbox:autocomposite": false,
    "mapbox:type": "template"
  },
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://api.maptiler.com/tiles/v3/tiles.json?key=YOUR_MAPTILER_API_KEY_HERE"
    },
    "terrain-rgb": {
      "type": "raster-dem",
      "url": "https://api.maptiler.com/terrain-rgb/tiles.json?key=YOUR_MAPTILER_API_KEY_HERE",
      "tileSize": 256
    }
  },
  "sprite": "https://api.maptiler.com/maps/streets-v2/sprite?key=YOUR_MAPTILER_API_KEY_HERE",
  "glyphs": "https://api.maptiler.com/fonts/{fontstack}/{range}.pbf?key=YOUR_MAPTILER_API_KEY_HERE",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f9fa"
      }
    },
    {
      "id": "terrain",
      "type": "hillshade",
      "source": "terrain-rgb",
      "paint": {
        "hillshade-exaggeration": 0.5,
        "hillshade-shadow-color": "#000000",
        "hillshade-highlight-color": "#ffffff",
        "hillshade-illumination-direction": 315
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#a0c8f0"
      }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "paint": {
        "fill-color": "#e8f5e8"
      }
    },
    {
      "id": "roads",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "primary", "secondary", "tertiary", "trunk"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": 2
      }
    },
    {
      "id": "bike-lanes",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "cycleway"],
      "paint": {
        "line-color": "#2196F3",
        "line-width": 3,
        "line-dasharray": [2, 1]
      }
    },
    {
      "id": "protected-paths",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "bicycle", "designated"],
      "paint": {
        "line-color": "#4CAF50",
        "line-width": 4
      }
    },
    {
      "id": "buildings",
      "type": "fill-extrusion",
      "source": "openmaptiles",
      "source-layer": "building",
      "paint": {
        "fill-extrusion-color": "#e0e0e0",
        "fill-extrusion-height": [
          "interpolate",
          ["linear"],
          ["zoom"],
          15,
          0,
          15.05,
          ["get", "render_height"]
        ],
        "fill-extrusion-base": [
          "interpolate",
          ["linear"],
          ["zoom"],
          15,
          0,
          15.05,
          ["get", "render_min_height"]
        ],
        "fill-extrusion-opacity": 0.6
      }
    },
    {
      "id": "poi-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "poi",
      "filter": ["in", "class", "bicycle", "shop"],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Inter Regular"],
        "text-size": 12,
        "text-anchor": "top",
        "text-offset": [0, 1]
      },
      "paint": {
        "text-color": "#233749",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    }
  ]
}

